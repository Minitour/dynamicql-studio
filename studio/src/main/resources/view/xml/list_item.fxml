<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<fx:root stylesheets="@../../ui/res/css/styles.css,@../css/style.css" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

    <Pane fx:id="parent" styleClass="container">
        <HBox fx:id="vbox" prefWidth="${parent.width}" spacing="16" alignment="CENTER_LEFT">
            <padding><Insets bottom="8" left="16" right="8" top="8" /></padding>
         <ImageView fx:id="imageView" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true"/>
            
            <Label fx:id="menu" styleClass="row-item" text="Menu Item">
                <font>
                    <Font name="Helvetica-Bold" size="16.0" />
                </font></Label>
        </HBox>
    </Pane>
</fx:root>
